<h2>Create New Landmark</h2>

<form action="/landmarks" method="post">
    <label>Name</label>
    <input type="text" name="landmark[name]" id="landmark_name">
    <br>
    <label>Year Completed</label>
    <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
    <br>

    <h3>Figures</h3>
    <br>
    <% @figures.each do |figure| %>
        <input type="checkbox" name="landmark[figure_ids][]" id="<%= "figure_#{figure.id}" %>" value="<%= figure.id %>">
        <%= figure.name %></input>
        <br>
    <% end %>
    <br>

    <h3>Create New Figure:</h3>
    <br>
    <label>Name:</label>
    <input type="text" name="figure[name]" id="new_figure">
            
    <button type="submit">Create New Landmark</button>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
